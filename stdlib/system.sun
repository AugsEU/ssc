// builtins
builtin getSystemFlag(flag);
builtin setSystemFlag(flag, value);

// functions
function setOnSystemFlag(flag) { setSystemFlag(flag, true); }
function setOffSystemFlag(flag) { setSystemFlag(flag, false); }
